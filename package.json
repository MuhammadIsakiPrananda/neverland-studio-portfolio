{
  "name": "neverlandstudio-portfolio",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "description": "Modern, full-stack portfolio website for Neverland Studio showcasing IT services, learning programs, and digital solutions",
  "author": {
    "name": "Neverland Studio",
    "email": "hello@neverlandstudio.my.id",
    "url": "https://portfolio.neverlandstudio.my.id"
  },
  "license": "MIT",
  "homepage": "https://portfolio.neverlandstudio.my.id",
  "repository": {
    "type": "git",
    "url": "https://github.com/neverlandstudio/portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/neverlandstudio/portfolio/issues",
    "email": "hello@neverlandstudio.my.id"
  },
  "keywords": [
    "portfolio",
    "react",
    "typescript",
    "vite",
    "laravel",
    "fullstack",
    "it-services",
    "learning-platform"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build --mode production",
    "build:check": "tsc -b && vite build",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist build node_modules/.vite",
    "docker:build": "docker build --target production -t neverland-portfolio:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "node -e \"try { require('husky') } catch (e) { if (e.code !== 'MODULE_NOT_FOUND') throw e }\" || echo 'Husky not installed'"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "chart.js": "^4.5.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.0",
    "react-helmet-async": "^2.0.5",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.11.0",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3",
    "terser": "^5.44.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "npm:rolldown-vite@7.2.5",
    "vite-plugin-compression": "^0.5.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
