# Production Environment Variables

# Application
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:YOUR_APP_KEY_HERE

# Database
DB_CONNECTION=mysql
DB_HOST=neverlandstudio-mysql
DB_PORT=3306
DB_DATABASE=neverlandstudio
DB_USERNAME=neverlanduser
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD

# Ports (HTTP only - SSL handled by Cloudflare Tunnel)
HTTP_PORT=80

# Frontend Environment (Cloudflare Tunnel Domain)
VITE_API_URL=https://portfolio.neverlandstudio.my.id/api
VITE_APP_NAME=Neverland Studio
VITE_APP_ENV=production

# Backend URLs (for Cloudflare Tunnel)
APP_URL=https://portfolio.neverlandstudio.my.id
FRONTEND_URL=https://portfolio.neverlandstudio.my.id

# Session & Cache
SESSION_DRIVER=file
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# Redis (optional - uncomment if using Redis)
# REDIS_HOST=redis
# REDIS_PASSWORD=null
# REDIS_PORT=6379
