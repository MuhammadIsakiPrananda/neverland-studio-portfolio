# Production Environment Variables

# Application
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:YOUR_APP_KEY_HERE

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=neverlandstudio
DB_USERNAME=neverlanduser
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD

# Ports
HTTP_PORT=80
HTTPS_PORT=443

# Frontend API URL (change to your domain in production)
VITE_API_URL=https://yourdomain.com/api

# Session & Cache
SESSION_DRIVER=file
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# Redis (optional - uncomment if using Redis)
# REDIS_HOST=redis
# REDIS_PASSWORD=null
# REDIS_PORT=6379
