# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and configure for your environment
# For production: set VITE_APP_ENV=production
# For development: set VITE_APP_ENV=development

# ===========================================
# APPLICATION
# ===========================================
VITE_APP_NAME=Neverland Studio Portfolio
VITE_APP_ENV=development

# ===========================================
# API CONFIGURATION
# ===========================================
# Development: use localhost
# Production: use your domain or relative path /api
VITE_API_URL=http://localhost:8000/api
# VITE_API_URL=/api  # Use this for production (relative path)
# VITE_API_URL=https://portfolio.neverlandstudio.my.id/api  # Or full domain

# ===========================================
# FEATURE FLAGS
# ===========================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# ===========================================
# CLOUDFLARE TUNNEL (Production Only)
# ===========================================
# Get your tunnel token from: https://one.dash.cloudflare.com/
# Access → Tunnels → Create Tunnel → Copy token
# Only needed when deploying with docker-compose
# CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token-here

# ===========================================
# BUILD CONFIGURATION
# ===========================================
NODE_ENV=development
# NODE_ENV=production  # Uncomment for production builds

